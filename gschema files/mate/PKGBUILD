# Maintainer: Keegan Milsten <willnhalt@gmail.com>

pkgname=reborn-schemas
_pkgname=reborn-desktop-settings
pkgver=1.1
pkgrel=1.1
pkgdesc="Setup configuration for Mate Reborn"
url="https://github.com/keeganmilsten/Reborn-Packages/tree/master/gschema%20files/mate
arch=('any')
license=('GPL2')
depends=('gsettings-desktop-schemas' 'dconf')
#replaces=('antergos-desktop' 'antergos-gsettings')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/keeganmilsten/${_pkgname}/archive/v${pkgver}.tar.gz")
install=${pkgname}/mate/schema.install
package() {
    cd "${srcdir}/${_pkgname}-${pkgver}"
    install -d "${pkgdir}/usr/share/glib-2.0/schemas"
    install -Dm644  /mate/95_mate.gschema.override  \
        "${pkgdir}/usr/share/glib-2.0
}
